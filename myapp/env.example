APP_NAME=Laravel
APP_ENV=local
APP_KEY=ключ Laravel
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# === Настройки базы данных ===
DB_CONNECTION=pgsql
# DB_CONNECTION=sqlite
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=laravel
# DB_DATABASE=/data/data/com.termux/files/home/pet/myapp/database/database.sqlite
DB_USERNAME=postgres
DB_PASSWORD=

# === Кэш, сессии и очередь ===
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=file
SESSION_LIFETIME=120

# === Настройки Redis ===
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=predis

# === Настройки почты ===
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587

# Укажите ваш Gmail адрес (например, example@gmail.com)
MAIL_USERNAME=ваш_емэйл

# Получите пароль приложения Gmail:
# 1. Перейдите в https://myaccount.google.com/security
# 2. Включите двухфакторную аутентификацию
# 3. Создайте пароль приложения
# 4. Вставьте 16-значный код ниже
MAIL_PASSWORD=ваш_пароль_приложения

MAIL_ENCRYPTION=tls

# Отправитель писем (обычно совпадает с MAIL_USERNAME)
MAIL_FROM_ADDRESS=ваш_емэйл
MAIL_FROM_NAME="Laravel name"

# === Настройки AWS (если не используете — оставьте пустыми) ===
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# === Настройки Pusher (если не используете — оставьте пустыми) ===
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# === Переменные для фронтенда (Vite) ===
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# === JWT токен ===
JWT_SECRET=сгенерируйте jwt токен
